<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rect"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tvAmount"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="-" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnMinus"
            android:layout_alignTop="@+id/btnMinus"
            android:layout_centerInParent="true"
            android:text="5"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btnPlus"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnMinus"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btnMinus"
            android:layout_toRightOf="@+id/tvAmount"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="+" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnMinus"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:lines="2"
            android:text="Название блюда можно длинное"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvName"
            android:text="50 грн" />

    </RelativeLayout>

</LinearLayout>