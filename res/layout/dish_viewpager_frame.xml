<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_5dp" >

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:lines="2"
        android:text="Название блюда можно длинное"
        android:textSize="20sp" />

    <RatingBar
        android:id="@+id/rbRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/rating_bar_rarus" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvRating"
        android:layout_margin="@dimen/abs__action_bar_subtitle_bottom_margin"
        android:text="Сумма: 200"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rbRating"
        android:text="Описание"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvDescription"
        android:layout_margin="@dimen/margin_5dp"
        android:text="50 грн" />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvPrice"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="4.7(50)" />

    <Button
        android:id="@+id/btnMinus"
        style="?android:attr/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rbRating"
        android:layout_below="@+id/tvTotal"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="-" />

    <Button
        android:id="@+id/btnPlus"
        style="?android:attr/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/rbRating"
        android:layout_alignTop="@+id/btnMinus"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="+" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPlus"
        android:layout_alignBottom="@+id/btnPlus"
        android:layout_centerHorizontal="true"
        android:text="5"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>